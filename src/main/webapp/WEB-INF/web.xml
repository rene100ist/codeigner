<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PaisServlet</servlet-name>
        <servlet-class>controller.PaisServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompaniaServlet</servlet-name>
        <servlet-class>controller.CompaniaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EstiloMusicaServlet</servlet-name>
        <servlet-class>controller.EstiloMusicaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArtistasServlet</servlet-name>
        <servlet-class>controller.ArtistasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ColeccionServlet</servlet-name>
        <servlet-class>controller.ColeccionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaisServlet</servlet-name>
        <url-pattern>/pais</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompaniaServlet</servlet-name>
        <url-pattern>/compania</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EstiloMusicaServlet</servlet-name>
        <url-pattern>/emusica</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArtistasServlet</servlet-name>
        <url-pattern>/artistas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ColeccionServlet</servlet-name>
        <url-pattern>/coleccion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
